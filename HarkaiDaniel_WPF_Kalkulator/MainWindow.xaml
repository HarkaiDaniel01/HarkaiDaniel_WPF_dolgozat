<Window x:Class="HarkaiDaniel_WPF_Kalkulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HarkaiDaniel_WPF_Kalkulator"
        mc:Ignorable="d"
        Title="Kalkulátor" Height="400" Width="400">
    <Grid>
        <Label
            Content="Kalkulátor adatai"
            Width="auto"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="60 20 0 0"
            FontSize="16"
            FontWeight="DemiBold"
            />

        <Label
            Content="1. adat"
            Width="auto"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="70 50 0 0"
            FontSize="16"
            FontWeight="DemiBold"
            />

        <TextBox
            x:Name="tbx_szam1Be"
            Width="130px"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="170 55 0 0"
            FontSize="16"
            />

        <Label
            Content="2. adat"
            Width="auto"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="70 80 0 0"
            FontSize="16"
            FontWeight="DemiBold"
            />

        <TextBox
            x:Name="tbx_szam2Be"
            Width="130px"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="170 85 0 0"
            FontSize="16"
            />

        <Label
            Content="Műveleti jel"
            Width="auto"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="70 110 0 0"
            FontSize="16"
            FontWeight="DemiBold"
            />

        <TextBox
            x:Name="tbx_muveletiJel"
            Width="130px"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="170 115 0 0"
            FontSize="16"
            />

        <Label
            Content="Művelet eredménye"
            Width="auto"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="70 180 0 0"
            FontSize="16"
            FontWeight="DemiBold"
            />

        <TextBox
            x:Name="tbx_eredmeny"
            Width="250px"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="70 210 0 0"
            FontSize="16"
            IsEnabled="False"
            />

        <Button
            Content="Művelet végrehajtása"
            Width="160px"
            Height="50"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="170 260 20 0"
            FontSize="16" Click="Button_Click"
            />

    </Grid>
</Window>
