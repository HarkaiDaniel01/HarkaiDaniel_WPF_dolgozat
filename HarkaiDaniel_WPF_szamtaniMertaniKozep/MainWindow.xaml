<Window x:Class="HarkaiDaniel_WPF_szamtaniMertaniKozep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HarkaiDaniel_WPF_szamtaniMertaniKozep"
        mc:Ignorable="d"
        Title="Számtani közép és mértani közép" Height="300" Width="400" MinHeight="300" MinWidth="400">
    <Grid Background="LightGray">
        
        <Label
            Content="Szám 1"
            Width="auto"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="15 10 0 0"
            FontSize="16"
            FontWeight="DemiBold"
            />

        <TextBox
            x:Name="tbx_szam1Be"
            Width="130px"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="20 40 0 0"
            FontSize="16"
            />

        <Label
            Content="Szám 2"
            Width="auto"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="210 10 0 0"
            FontSize="16"
            FontWeight="DemiBold"
            />

        <TextBox
            x:Name="tbx_szam2Be"
            Width="130px"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="215 40 0 0"
            FontSize="16"
            />

        <Label
            Content="Mértani közép"
            Width="auto"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="15 80 0 0"
            FontSize="16"
            FontWeight="DemiBold"
            />

        <TextBox
            x:Name="tbx_mertaniKozep"
            Width="180px"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="20 110 0 0"
            FontSize="16"
            IsEnabled="False"
            />

        <Label
            Content="Számtani közép"
            Width="auto"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="15 135 0 0"
            FontSize="16"
            FontWeight="DemiBold"
            />

        <TextBox
            x:Name="tbx_szamtaniKozep"
            Width="180px"
            Height="auto"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Margin="20 165 0 0"
            FontSize="16"
            IsEnabled="False"
            />

        <Button
            Content="Számol"
            Width="160px"
            Height="30"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Margin="0 210 20 0"
            FontSize="16" Click="Button_Click"
            />








    </Grid>
</Window>
